<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/profile_padding">


    <EditText
        android:id="@+id/name_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name_note_edit_text"
        android:textSize="@dimen/name_text_size"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/note_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/date_edit_text"
        android:inputType="date"
        android:textSize="@dimen/date_text_size" />

    <EditText
        android:id="@+id/description_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description_edit_text"
        android:textSize="@dimen/description_text_size"
        android:textStyle="italic" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_button_save"
        android:textSize="@dimen/button_save_text_size" />

</LinearLayout>